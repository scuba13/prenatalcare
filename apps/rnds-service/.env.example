# RNDS Service Configuration

# Server
PORT=3002
NODE_ENV=development

# RNDS/DATASUS Configuration
# Para desenvolvimento, usa o mock server (http://localhost:3003)
# Para produção, trocar para URL real da RNDS
RNDS_BASE_URL=http://localhost:3003
RNDS_AUTH_URL=http://localhost:3003/oauth2/token

# OAuth2 Credentials
# Mock credentials (desenvolvimento)
RNDS_CLIENT_ID=mock-client
RNDS_CLIENT_SECRET=mock-secret

# mTLS Configuration
# Para desenvolvimento: false (sem certificados)
# Para produção: true (requer certificados em /certs)
RNDS_USE_MTLS=false

# Certificados mTLS (apenas produção)
# Colocar certificados no diretório: apps/rnds-service/certs/
# - client.crt (certificado do cliente)
# - client.key (chave privada)
# - ca.crt (certificado da CA - opcional)

# Database Configuration
# Usa database separado para melhor isolamento e performance
DB_HOST=postgres
DB_PORT=5432
DB_USER=prenatal_user
DB_PASSWORD=prenatal_pass
DB_NAME=rnds_sync

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672

# Core Service URL
CORE_SERVICE_URL=http://localhost:3001

# Redis Cache (futuro)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
